# ===========================================
# Pet Adoption Platform Environment Variables
# ===========================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Pet Adoption Platform"
APP_VERSION=1.0.0

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=mysql+aiomysql://pet_user:pet_password@localhost:3306/pet_adoption
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=pet_adoption
DATABASE_USER=pet_user
DATABASE_PASSWORD=pet_password

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_DECODE_RESPONSES=true

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Security Settings
# ===========================================
SECRET_KEY=your-super-secret-app-key-change-in-production
PASSWORD_HASH_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ===========================================
# File Upload & Storage
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=pet-adoption-files-dev
AWS_REGION=us-east-1
AWS_S3_ENDPOINT_URL=

# File Upload Limits (in bytes)
MAX_FILE_SIZE=10485760  # 10MB
MAX_PHOTO_SIZE=5242880  # 5MB
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx

# ===========================================
# Email Configuration
# ===========================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@petadoption.com
EMAIL_FROM_NAME="Pet Adoption Platform"
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# ===========================================
# Push Notifications
# ===========================================
FCM_SERVER_KEY=your-firebase-server-key
FCM_SENDER_ID=your-firebase-sender-id
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=your-vapid-email@example.com

# ===========================================
# External APIs
# ===========================================
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ===========================================
# Performance & Monitoring
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=5

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME="Pet Adoption Platform"
VITE_APP_VERSION=1.0.0
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_ENABLE_DEV_TOOLS=true

# API Version Configuration
# Note: VITE_API_BASE_URL will be automatically constructed from VITE_API_URL + /api/v{VERSION}
# You can override the default version (v1) using VITE_API_VERSION
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1  # Options: v1 (stable) or v2 (new architecture)
VITE_V2_ENABLED=true  # Set to false to disable V2 API option in UI
VITE_API_TIMEOUT=30000  # API request timeout in milliseconds

# ===========================================
# Testing Configuration
# ===========================================
TEST_DATABASE_URL=mysql+aiomysql://test_user:test_password@localhost:3306/pet_adoption_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_JWT_SECRET_KEY=test-secret-key-for-testing-only

# ===========================================
# Development Tools
# ===========================================
# Enable/disable development features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_ADMIN_PANEL=true

# Hot reload settings
FRONTEND_HOT_RELOAD=true
BACKEND_AUTO_RELOAD=true

# ===========================================
# Production Overrides
# ===========================================
# These will be used in production environment
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com
# DATABASE_URL=mysql+aiomysql://prod_user:secure_password@prod-db:3306/pet_adoption
# JWT_SECRET_KEY=very-secure-production-key-with-high-entropy
# AWS_S3_BUCKET=pet-adoption-files-prod